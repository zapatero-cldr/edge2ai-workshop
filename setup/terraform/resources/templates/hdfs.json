{
  "hostTemplates": [
    {
      "refName": "HostTemplate-0-from-{{CLUSTER_HOST}}",
      "roleConfigGroupsRefNames": [
         "hdfs-BALANCER-BASE"
        ,"hdfs-DATANODE-BASE"
        ,"hdfs-HTTPFS-BASE"
        ,"hdfs-NAMENODE-BASE"
        ,"hdfs-SECONDARYNAMENODE-BASE"
      ]
    }
  ],
  "services": [
    {
      "refName": "hdfs",
      "serviceType": "HDFS",
      "displayName": "HDFS",
      "serviceConfigs": [
{% if ENABLE_TLS == 'yes' %}
        {
          "name": "dfs_data_transfer_protection",
          "value": "privacy"
        },
        {
          "name": "dfs_encrypt_data_transfer",
          "value": "true"
        },
        {
          "name": "hadoop_rpc_protection",
          "value": "privacy"
        },
        {
          "name": "hadoop_secure_web_ui",
          "value": "true"
        },
        {
          "name": "hdfs_hadoop_ssl_enabled",
          "value": "true"
        },
        {
          "name": "ssl_client_truststore_location",
          "value": "/opt/cloudera/security/jks/truststore.jks"
        },
        {
          "name": "ssl_client_truststore_password",
          "value": "{{THE_PWD}}"
        },
        {
          "name": "ssl_server_keystore_keypassword",
          "value": "{{THE_PWD}}"
        },
        {
          "name": "ssl_server_keystore_location",
          "value": "/opt/cloudera/security/jks/keystore.jks"
        },
        {
          "name": "ssl_server_keystore_password",
          "value": "{{THE_PWD}}"
        },
{% endif %}
{% if HAS_RANGER %}
        {
          "name" : "enable_ranger_authorization",
          "value" : "true"
        },
{% endif %}
{% if ENABLE_KERBEROS == 'yes' %}
        {
          "name" : "dfs_encrypt_data_transfer_algorithm",
          "value" : "AES/CTR/NoPadding"
        },
        {
          "name" : "hadoop_security_authentication",
          "value" : "kerberos"
        },
        {
          "name" : "hadoop_security_authorization",
          "value" : "true"
        },
{% endif %}
{% if CDH_VERSION is ge('6') %}
        {
          "name": "hdfs_verify_ec_with_topology_enabled",
          "value": "false"
        },
{% endif %}
        {
          "name": "dfs_replication",
          "value": "1"
        },
        {
          "name": "hdfs_under_replicated_blocks_thresholds",
          "value": "{\"warning\":\"never\",\"critical\":\"never\"}"
        }
      ],
      "roleConfigGroups": [
        {
          "refName": "hdfs-NAMENODE-BASE",
          "roleType": "NAMENODE",
          "base": true,
          "configs": [
{% if ENABLE_TLS == 'yes' %}
        {
          "name": "namenode_truststore_file",
          "value": "/opt/cloudera/security/jks/truststore.jks"
        },
        {
          "name": "namenode_truststore_password",
          "value": "{{THE_PWD}}"
        }
{% endif %}
          ]
        },
        {
          "refName": "hdfs-SECONDARYNAMENODE-BASE",
          "roleType": "SECONDARYNAMENODE",
          "base": true
        },
        {
          "refName": "hdfs-DATANODE-BASE",
          "roleType": "DATANODE",
          "base": true,
          "configs": [
{% if ENABLE_KERBEROS == 'yes' %}
            {
              "name" : "dfs_datanode_data_dir_perm",
              "value" : "700"
            }
{% if ENABLE_TLS != 'yes' %}
            ,{
              "name" : "dfs_datanode_http_port",
              "value" : "1006"
            },
            {
              "name" : "dfs_datanode_port",
              "value" : "1004"
            }
{% endif %}
{% endif %}
          ]
        },
        {
          "refName": "hdfs-HTTPFS-BASE",
          "roleType": "HTTPFS",
          "base": true,
          "configs": [
{% if ENABLE_TLS == 'yes' %}
        {
          "name": "httpfs_https_keystore_file",
          "value": "/opt/cloudera/security/jks/keystore.jks"
        },
        {
          "name": "httpfs_https_keystore_password",
          "value": "{{THE_PWD}}"
        },
        {
          "name": "httpfs_https_truststore_file",
          "value": "/opt/cloudera/security/jks/truststore.jks"
        },
        {
          "name": "httpfs_https_truststore_password",
          "value": "{{THE_PWD}}"
        },
        {
          "name": "httpfs_use_ssl",
          "value": "true"
        }
{% endif %}
          ]
        },
        {
          "refName": "hdfs-BALANCER-BASE",
          "roleType": "BALANCER",
          "base": true
        }
      ]
    }
  ]
}
